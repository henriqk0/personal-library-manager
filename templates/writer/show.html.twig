{% extends 'base.html.twig' %}

{% block title %}Writer{% endblock %}

{% block body %}
    <h1>Writer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ writer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ writer.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                {% if writer.isBirthBeforeChrist() %}
                    <td>{{ writer.birthdate ? writer.birthdate|date('Y-m-d') : '' }} B.C.</td>
                {% else %}
                    <td>{{ writer.birthdate ? writer.birthdate|date('Y-m-d') : '' }} A.D.</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_writer_index') }}">back to list</a>

    <a href="{{ path('app_writer_edit', {'id': writer.id}) }}">edit</a>

    {{ include('writer/_delete_form.html.twig') }}
{% endblock %}
